async def broadcast_status_update(call_sid: str, status: str, customer_id: str = None):
    """
    Broadcasts a call status update to all connected WebSocket clients.
    """
    message = {
        "event": "call_status_update",
        "call_sid": call_sid,
        "status": status,
        "customer_id": customer_id,
        "message": f"Call status updated to {status}"
    }

    disconnected = []
    for ws in active_connections:
        try:
            await ws.send_text(json.dumps(message))
        except Exception as e:
            logger.error.error(f"тЭМ Failed to send WS message: {e}")
            disconnected.append(ws)

    # Remove dead connections
    for ws in disconnected:
        try:
            active_connections.remove(ws)
        except ValueError:
            pass

    logger.websocket.info(f"ЁЯУв Broadcasted status update: {message}")





